<!-- Hover effect and styling -->
<style>
    /* Styling for the service cards */
    .service-box {
        text-align: center;
        height: 100%;
        padding: 20px;
    }

    .col-md-4 {
        transition: background-color 0.3s;
        padding: 0;
    }

    /* Hover effect for each segment */
    .col-md-4:hover .service-box {
        background-color: rgb(105, 225, 255);
        color: rgb(0, 0, 0);
    }

    /* Styling for progress circles */
    .progress-circle {
        border-radius: 50%;
        width: 100px;
        height: 100px;
        display: inline-block;
        line-height: 100px;
        font-size: 24px;
        text-align: center;
